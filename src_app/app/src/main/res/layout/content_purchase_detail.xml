<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="?attr/actionBarSize"
                android:id="@+id/container_purch_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/order_detail_state"
                android:background="@color/background_floating_material_dark">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@color/background_floating_material_dark">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/order_detail_status"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="31dp"
                        android:layout_marginStart="31dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_detail_status_string"
                        android:textSize="18sp"

                        android:textColor="@color/primary_text_default_material_dark"
                        android:layout_marginLeft="82dp"
                        android:layout_marginStart="82dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/order_status"
                        android:layout_toEndOf="@+id/order_status"/>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/card_view_order_detail_price">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@color/background_floating_material_dark">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_detail_price"
                        android:textSize="18sp"

                        android:textColor="@color/primary_text_default_material_dark"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="31dp"/>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/order_detail_dates">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:background="@color/background_floating_material_dark">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_detail_date_confirmed"
                        android:textSize="18sp"

                        android:textColor="@color/primary_text_default_material_dark"
                        android:layout_marginLeft="31dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_detail_date_transported"
                        android:textSize="18sp"

                        android:textColor="@color/primary_text_default_material_dark"
                        android:layout_marginLeft="31dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_detail_date_delivered"
                        android:textSize="18sp"

                        android:textColor="@color/primary_text_default_material_dark"
                        android:layout_marginLeft="31dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/order_detail_address">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:background="@color/background_floating_material_dark">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_detail_address_name"
                        android:textSize="18sp"

                        android:textColor="@color/primary_text_default_material_dark"
                        android:layout_marginLeft="31dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_detail_province"
                        android:textSize="18sp"

                        android:textColor="@color/primary_text_default_material_dark"
                        android:layout_marginLeft="31dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_detail_city"
                        android:textSize="18sp"

                        android:textColor="@color/primary_text_default_material_dark"
                        android:layout_marginLeft="31dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_detail_telephone"
                        android:textSize="18sp"

                        android:textColor="@color/primary_text_default_material_dark"
                        android:layout_marginLeft="31dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_detail_zip_code"
                        android:textSize="18sp"

                        android:textColor="@color/primary_text_default_material_dark"
                        android:layout_marginLeft="31dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_detail_street"
                        android:textSize="18sp"

                        android:textColor="@color/primary_text_default_material_dark"
                        android:layout_marginLeft="31dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_detail_number"
                        android:textSize="18sp"

                        android:textColor="@color/primary_text_default_material_dark"
                        android:layout_marginLeft="31dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_detail_floor"
                        android:textSize="18sp"

                        android:textColor="@color/primary_text_default_material_dark"
                        android:layout_marginLeft="31dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_detail_door"
                        android:textSize="18sp"

                        android:textColor="@color/primary_text_default_material_dark"
                        android:layout_marginLeft="31dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>




        </LinearLayout>

    </ScrollView>

</LinearLayout>